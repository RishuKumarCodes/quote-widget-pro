<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFFFF" />
            <corners android:radius="12dp" />
            <stroke android:width="2dp" android:color="#FFE0E0E0" />
        </shape>
    </item>
    
    <!-- Quote indicator lines -->
    <item android:top="20dp" android:left="20dp" android:right="20dp" android:bottom="40dp">
        <shape android:shape="rectangle">
            <solid android:color="#FF007BFF" />
            <corners android:radius="1dp" />
        </shape>
    </item>
    
    <!-- Author indicator line -->
    <item android:top="60dp" android:left="40dp" android:right="80dp" android:bottom="20dp">
        <shape android:shape="rectangle">
            <solid android:color="#FF6C757D" />
            <corners android:radius="1dp" />
        </shape>
    </item>
    
    <!-- App icon indicator (small circle) -->
    <item android:top="8dp" android:right="8dp" android:width="16dp" android:height="16dp">
        <shape android:shape="oval">
            <solid android:color="#FF007BFF" />
        </shape>
    </item>
</layer-list>